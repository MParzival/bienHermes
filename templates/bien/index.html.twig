{% extends 'base.html.twig' %}

{% block title %}Les biens{% endblock %}

{% block body %}


        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        {{ form_start(form) }}
                        <div class="form-row align-items-end">
                            <div class="col">
                                {{ form_row(form.title) }}
                                {{ form_row(form.postalCode) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.maxPrice) }}
                                {{ form_row(form.rentMax) }}
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <button class="btn btn-primary">Rechercher</button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>


                    <div class="col-md-4">
                        {{ form_start(formRef) }}
                        <div class="form-row align-items-end">
                            <div class="col">
                                {{ form_row(formRef.numero) }}
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <button class="btn btn-primary">Rechercher</button>
                                </div>
                            </div>
                        </div>

                        {{ form_end(formRef) }}
                    </div>

                </div>
            </div>
        </div>





    <div class="container mt-4">


        <h2>les biens : </h2>
        <div class="row flex">
            {% if bienRef is not empty %}
                {% for bien in bienRef %}
                    <div class="col-md-4 mt-4">
                        <div class="card">
                            {% if bien.pictfilename1 is not empty %}
                                <img src="https://gateway.transactium.fr/rep/picts/good/{{ bien.pictfilename1 }}" alt="min_{{ bien.pictfilename1 }}">
                            {% else %}
                                <img src="{{ asset ('assets/image/placeholder.png')}}" alt="min_placeholder" class="empty">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('bien_show', { codeagence: bien.codeagence, numero: bien.numero, slug: bien.slug}) }}">{{ bien.titreannonce }}</a>
                                </h5>
                                <p class="card-text"><i class="fa fa-map-marker mr-2"></i>{{ bien.ville }} ({{ bien.codepostal }})</p>
                                <p class="card-text"><i class="fa fa-briefcase mr-2"></i>{{ bien.activite }}</p>
                                <div class="btn btn-danger pull-right prixAnnonce">
                                    {% if bien.prixpublic != 0 %}
                                        {{ bien.prixpublic | number_format(0,',', ' ') }} € FAI*
                                    {% elseif bien.prixpublic != 0 and bien.loyerannuel > 0 %}
                                        {{ bien.prixpublic| number_format(0, ',', ' ') }} € FAI* - {{ bien.loyerannuel }} € HT / AN
                                    {% else %}
                                        {{ bien.loyerannuel }} € HT / AN
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {% if biens != null and biens|length > 0 %}
                    {% for bien in biens %}
                        <div class="col-md-4 mt-4">
                            <div class="card">
                                {% if bien.pictfilename1 is not empty %}
                                    <img src="https://gateway.transactium.fr/rep/picts/good/{{ bien.pictfilename1 }}" alt="min_{{ bien.pictfilename1 }}">
                                {% else %}
                                    <img src="{{ asset ('assets/image/placeholder.png')}}" alt="min_placeholder" class="empty">
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="{{ path('bien_show', { codeagence: bien.codeagence, numero: bien.numero, slug: bien.slug}) }}">{{ bien.titreannonce }}</a>
                                    </h5>
                                    <p class="card-text"><i class="fa fa-map-marker mr-2"></i>{{ bien.ville }} ({{ bien.codepostal }})</p>
                                    <p class="card-text"><i class="fa fa-briefcase mr-2"></i>{{ bien.activite }}</p>
                                    <div class="btn btn-danger pull-right prixAnnonce">
                                        {% if bien.prixpublic != 0 %}
                                            {{ bien.prixpublic | number_format(0,',', ' ') }} € FAI*
                                        {% elseif bien.prixpublic != 0 and bien.loyerannuel > 0 %}
                                            {{ bien.prixpublic| number_format(0, ',', ' ') }} € FAI* - {{ bien.loyerannuel }} € HT / AN
                                        {% else %}
                                            {{ bien.loyerannuel }} € HT / AN
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
