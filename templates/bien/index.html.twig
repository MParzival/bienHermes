{% extends 'base.html.twig' %}

{% block title %}Hello BienController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="{{ path('app_bien') }}" method="post">
                        <div class="row">
                            <div class="col form-group">
                                <input type="text" name="nameSearch" class="form-control" placeholder="Rechercher par nom...">
                            </div>
                            <div class="col form-group">
                                <input type="text" name="codePostalSearch" class="form-control" placeholder="Rechercher par code postal...">
                            </div>
                            <div class="col form-group">
                                <input type="number" name="priceSearch" class="form-control" placeholder="Budget maximal">
                            </div>
                            <div class="col form-group">
                                <input type="number" name="rentSearch" class="form-control" placeholder="loyer maximal">
                            </div>
                            <button type="submit" class="btn btn-success pull-right">Chercher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <h2>les derniers biens</h2>
        <div class="row flex">
            {% if biens != null and biens|length > 0 %}
                {% for bien in biens %}
                    <div class="col-md-4 mt-4">
                        <div class="card">
                            {% if bien.pictfilename1 is not empty %}
                                <img src="https://gateway.transactium.fr/rep/picts/good/{{ bien.pictfilename1 }}" alt="min_{{ bien.pictfilename1 }}">
                            {% else %}
                                <img src="{{ asset ('assets/image/placeholder.png')}}" alt="min_placeholder" class="empty">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('bien_show', { codeagence: bien.codeagence, numero: bien.numero, slug: bien.slug}) }}">{{ bien.titreannonce }}</a>
                                </h5>
                                <p class="card-text"><i class="fa fa-map-marker mr-2"></i>{{ bien.ville }} ({{ bien.codepostal }})</p>
                                <p class="card-text"><i class="fa fa-briefcase mr-2"></i>{{ bien.activite }}</p>
                                <div class="btn btn-danger pull-right prixAnnonce">
                                    {% if bien.prixpublic != 0 %}
                                        {{ bien.formattedPrice }} € FAI*
                                    {% elseif bien.prixpublic != 0 and bien.loyerannuel > 0 %}
                                        {{ bien.formattedPrice }} € FAI* - {{ bien.loyerannuel }} € HT / AN
                                    {% else %}
                                        {{ bien.loyerannuel }} € HT / AN
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
