<a{% for attr, value in options | merge({class: 'btn btn-secondary ml-2'}) %} {{ attr }}="{{ value }}" {% endfor %}>
    <span class="float-right">
        {% if app.request.get('sort') == key %}
            {% if app.request.get('direction') == 'DESC' %}
                <i class="fa fa-sort-down mr-2"></i>
                {% else %}
                <i class="fa fa-sort-up mr-2"></i>
            {% endif %}
            {% else %}
            <i class="fa fa-sort"></i>
        {% endif %}
    </span>
{{ title }}
</a>
